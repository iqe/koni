<?xml version='1.0' encoding='utf-8'?>
<clientConfig version="1.1">
  <emailProvider id="{{ provider }}">
    <domain>{{ domain }}</domain>
    <displayName>{{ emailaddress }}</displayName>
    <displayShortName>test</displayShortName>
    <outgoingServer type="smtp">
      <hostname>{{ smtp_server }}</hostname>
      <port>465</port>
      <socketType>SSL</socketType>
      <authentication>password-cleartext</authentication>
      <username>{{ emailaddress }}</username>
      <useGlobalPreferredServer>yes</useGlobalPreferredServer>
    </outgoingServer>
    <incomingServer type="imap">
      <hostname>{{ imap_server }}</hostname>
      <port>993</port>
      <socketType>SSL</socketType>
      <authentication>password-cleartext</authentication>
      <username>{{ emailaddress }}</username>
    </incomingServer>
    <incomingServer type="pop3">
      <hostname>{{ pop_server }}</hostname>
      <port>995</port>
      <socketType>SSL</socketType>
      <authentication>password-cleartext</authentication>
      <username>{{ emailaddress }}</username>
    </incomingServer>
  </emailProvider>
</clientConfig>
